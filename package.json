{
  "name": "scada-app",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "engines": { "node": ">=20" },

  "scripts": {
    "// dev --------------------------------": "",
    "dev": "vite",

    "dev:kpi": "pnpm -C src/apps/kpi dev -- --host 127.0.0.1 --port 5174 --strictPort",
    "dev:infra": "pnpm -C src/apps/infraestructura dev -- --host 127.0.0.1 --port 5181 --strictPort",
    "dev:apps": "concurrently -k -n KPI,INFRA -c magenta,green \"pnpm dev:kpi\" \"pnpm dev:infra\"",
    "dev:all": "concurrently -k -n APPS,APP -c yellow,cyan \"pnpm dev:apps\" \"pnpm dev\"",


    "// build (prod) ------------------------": "",
    "build:kpi": "pnpm -C src/apps/kpi build",
    "copy:kpi": "shx rm -rf public/kpi && shx mkdir -p public/kpi && shx cp -r src/apps/kpi/dist/* public/kpi/",

    "build:infra": "pnpm -C src/apps/infraestructura build",
    "copy:infra": "shx rm -rf public/infraestructura && shx mkdir -p public/infraestructura && shx cp -r src/apps/infraestructura/dist/* public/infraestructura/",

    "build:external": "pnpm run build:infra && pnpm run copy:infra && pnpm run build:kpi && pnpm run copy:kpi",

    "build": "pnpm run build:external && vite build",


    "// (opcional) watch de copias en dev ---": "",
    "copy:kpi:watch": "chokidar \"src/apps/kpi/dist/**/*\" -c \"pnpm run copy:kpi\"",


    "// preview est√°tico --------------------": "",
    "preview": "vite preview --strictPort"
  },

  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^7.9.1",
    "recharts": "^3.1.2"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^5.0.2",
    "autoprefixer": "^10.4.16",
    "chokidar-cli": "^3.0.0",
    "concurrently": "^9.2.1",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.3.3",
    "typescript": "^5.2.2",
    "vite": "^5.0.0",
    "shx": "^0.3.4"
  },
  "packageManager": "pnpm@10.17.0"
}
